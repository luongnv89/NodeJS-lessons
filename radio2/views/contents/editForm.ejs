<div class="modal fade" id="editForm_{{channel._id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit {{channel.name}}</h4>
      </div>
      <div class="modal-body">
       <div role="form" id="formAddnew">
        <div class="form-group">
          <input class="form-control rsName" type="name" placeholder="Radio stream name" value="{{channel.name}}" required>
        </div>
        <div class="form-group">
          <input  class="form-control rsTags" type="text" placeholder="Tags, divided by a comma" value="{{channel.tags}}" required>
        </div>
        <div class="form-group">
          <textarea class="form-control rsUrls" placeholder="Enter many stream url, divided by a comma" required>{{channel.urls}}</textarea>
        </div>
        <div class="form-group">
          <input  class="form-control rsLogo" type="url" id="rsLogo" placeholder="Enter logo url" value="">
          <div>
            <input type="file" class="rslogoFile">
          </div>
        </div>
        <div class="form-group">
          <img src="{{channel.logo}}" alt="Logo preview" class="imgLogoPreview">
        </div>
        <button type="submit" class="btn btn-default" data-dismiss="modal" onclick="updateStream('editForm_{{channel._id}}');">Update radio stream</button>
      </div>
    </div>
  </div>
</div>
</div>