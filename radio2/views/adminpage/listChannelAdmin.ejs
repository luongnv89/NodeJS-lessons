<script type="text/javascript">
  function calculateStar (arrayStar) {
    var sum = 0;
    arrayStar.forEach(function(s){
      sum+=s;
    });
    return s/arrayStar.length;
  }
</script>
<div class="row">
  <% channels.forEach(function(ch){ %>
     <div class="col-sm-5 col-md-6" id="<%=ch._id%>">
      <div class="thumbnail">
        <img alt="Radio logo" src="<%=ch.logo%>">
        <div class="caption">
          <h3><%=ch.name%></h3>
          <p>Tags: <% ch.tags.forEach(function(t){ %>
              <a href="/tags/<%=t%>"><%=t%></a>,
              <% });%>
          </p>
          <p>
            Stream urls:
            <ul><% ch.urls.forEach(function(u){ %>
              <li><%=u%></li>
              <% });%>
            </ul>
          </p>
          <p><span><%= ch.comments.star%><img src="/images/star.png" width="15px"></span> <span> listent:<%=ch.comments.listent%></span></p>
          <p><a href="/admin/edit/<%=ch._id%>" class="btn btn-warning" role="button">Edit</a> <a href="/admin/delete/<%=ch._id%>" class="btn btn-danger" role="button">Delete</a></p>
        </div>
      </div>
    </div>
  <% });%>
</div>