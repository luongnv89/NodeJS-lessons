div(class="thumbnail")
        img(ng-src="{{currentChannel.logo}}", alt="Radio logo")
        div(class="caption")
            h3 {{currentChannel.name}}
            div
                |Tags:
                span(ng-repeat="tag in currentChannel.tags")
                    a(href="/tags/{{tag}}") {{tag}}
                    |,
            div
                audio(class="audioplayer",controls,autoplay,ng-repeat="u in currentChannel.urls")
                    source(ng-src="{{trustSrc(u)}}")
            div
                span Star:{{currentChannel.comments.star.length}}
                span Listent:{{currentChannel.comments.listent}}
            div
                button(type="button",class="btn btn-primary",ng-click="previousChannel()") Previous
                button(type="button",class="btn btn-primary",ng-click="nextChannel()") Next
h2 Total number of channels: {{radios.length}}
div(class="container-fluid")
        div(class="row")
            div(class="col-sm-6 col-md-4",ng-repeat='radio in radios|filter:query|orderBy:orderProp')
                div(class="thumbnail",id="{{radio._id}}")
                    img(ng-src="{{radio.logo}}", alt="Radio logo")
                    div(class="caption")
                        h3 {{radio.name}}
                        div
                            |Tags:
                            span(ng-repeat="tag in radio.tags")
                                a(href="/tags/{{tag}}") {{tag}}
                                |,
                        div
                            |Streams:
                            ul(class="streams")
                                li(ng-repeat="u in radio.urls")
                                    span {{u}}
                        div
                            span Star:{{radio.comments.star.length}}
                            span Listent:{{radio.comments.listent}}
                        div
                            a(role="button",class="btn btn-primary",href="#/view/{{radio._id}}") Play
                            a(role="button",class="btn btn-primary",href="#/edit/{{radio._id}}") Edit
                            a(role="button",class="btn btn-primary",href="#/delete/{{radio._id}}") Delete