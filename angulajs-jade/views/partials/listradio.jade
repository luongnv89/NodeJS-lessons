div(class="container-fluid")
        div(class="row")
            div(class="col-sm-6 col-md-4",ng-repeat='radio in radios|filter:query|orderBy:orderProp')
                div(class="thumbnail",id="{{radio._id}}")
                    img(ng-src="{{radio.logo}}", alt="Radio logo")
                    div(class="caption")
                        h3 {{radio.name}}
                        div
                            |Tags:
                            span(ng-repeat="tag in radio.tags")
                                a(href="/tags/{{tag}}") {{tag}}
                                |,
                        div(ng-if="isAdmin==true")
                            div
                                |Streams:
                                ul(class="streams")
                                    li(ng-repeat="u in radio.urls")
                                        span {{u}}
                        div
                            span Star:{{radio.comments.star.length}} 
                            span Listent:{{radio.comments.listent}}
                        div
                            div(ng-if="isAdmin==false")
                                button(role="button",class="btn btn-primary",ng-click="btnPlay(radio)") Play
                            div(ng-if="isAdmin==true")
                                a(role="button",class="btn btn-primary",href="#/admin/edit/{{radio._id}}") Edit
                                a(role="button",class="btn btn-primary",href="#/admin/delete/{{radio._id}}") Delete