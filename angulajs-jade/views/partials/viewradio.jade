div(class="thumbnail")
	img(ng-src="{{channel.logo}}", alt="Radio logo")
	div(class="caption")
		h3 {{channel.name}}
		div
			|Tags:
			span(ng-repeat="tag in channel.tags")
				a(href="/tags/{{tag}}") {{tag}}
				|,
		div
			|Streams:
			ul(class="streams")
				li(ng-repeat="u in channel.urls")
					span {{u}}
		div
			span(class="pull-left")
				|Star:{{channel.comments.star.length}}
			span(class="pull-right")
				|Listent:{{channel.comments.listent}}
		div
			button(type="button",class="btn btn-primary btn-block") Play